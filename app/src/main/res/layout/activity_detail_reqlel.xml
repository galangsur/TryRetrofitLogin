<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".activity.DetailReqlelActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Comment"/>

    <TextView
        android:id="@+id/txt_reqlelid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pelelang"/>

    <TextView
        android:id="@+id/txt_reqleluser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pendaftar"/>

    <TextView
        android:id="@+id/txt_reqlelpengirim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"/>

    <Button
        android:id="@+id/btn_reqlelaccept"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Terima"
        android:layout_marginTop="50dp" />

    <Button
        android:id="@+id/btn_reqlelreject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tolak"
        android:textColor="#ffffff"
        android:backgroundTint="@color/red"
        android:layout_marginTop="10dp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tmp_reqlelid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="sd"/>

        <TextView
            android:id="@+id/tmp_reqlel_iduser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/tmp_reqlelid"
            android:hint="ad"/>

        <TextView
            android:id="@+id/tmp_reqlel_idpendaftar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/tmp_reqlel_iduser"
            android:hint="as"/>

        <TextView
            android:id="@+id/tmp_reqlel_idlelang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/tmp_reqlel_idpendaftar"
            android:hint="ds"/>

    </RelativeLayout>

</LinearLayout>