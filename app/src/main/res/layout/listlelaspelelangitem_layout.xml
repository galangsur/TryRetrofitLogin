<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="25dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/waitasst"/>
        <TextView
            android:layout_width="245dp"
            android:layout_height="wrap_content"
            android:text="Peserta lelang sudah menunggu anda untuk memulai lelang.."
            android:textColor="@color/orange5"
            android:textStyle="bold"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/id_aspelelang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginLeft="110dp"
            android:layout_below="@id/idlelang_aspelelang"/>
        <TextView
            android:id="@+id/idlelang_aspelelang"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="110dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="lelang yg di ikuti"
            android:textSize="12dp"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/gchattoken_key"
            android:layout_marginLeft="110dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_below="@+id/id_aspelelang"/>
        <TextView
            android:id="@+id/idlelbrjalan"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:text="1"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textAlignment="center"
            android:background="@drawable/signasset_d"
            android:gravity="center_horizontal|center_vertical" />
        <ImageView
            android:id="@+id/btn_toroomaspelelang"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/ic_baseline_more_brown_24"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="100dp"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>