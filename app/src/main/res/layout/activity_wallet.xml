<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/green1"
    tools:context=".activity.WalletActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rellaySaldo"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="150dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/homeasset_f">
                <TextView
                    android:layout_width="match_parent"
                    android:text="Saldo Wallet Point anda :"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_height="35dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="50dp"/>

                <TextView
                    android:id="@+id/tmpwlt_namauser"
                    android:layout_width="1dp"
                    android:layout_height="1dp"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginTop="180dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/homeasset_e">
                <ImageView
                    android:id="@+id/txt_rpsaldo"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="WP"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:textColor="#000000"
                    android:background="@drawable/coinrp"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:id="@+id/txt_saldoawal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_below="@id/txt_rpsaldo"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_horizontal" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pilihan Topup"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginTop="50dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/rellaySaldo"/>
            <RelativeLayout
                android:id="@+id/garis_topup"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginTop="90dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/homeasset_f"
                android:layout_below="@id/rellaySaldo"/>

            <RelativeLayout
                android:id="@+id/rvtopup1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/green1"
                android:layout_below="@id/garis_topup">

                <RelativeLayout
                    android:id="@+id/rvtopupA"
                    android:layout_width="280dp"
                    android:layout_height="55dp"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/homeasset_f">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/coinrp"
                        android:text="WP"
                        android:textColor="#000000"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="500.000"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:layout_toLeftOf="@id/btntmbh_a"
                        android:layout_centerVertical="true"/>

                    <Button
                        android:id="@+id/btntmbh_a"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/homeasset_e"
                        android:text="tambah"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rvtopupB"
                    android:layout_width="280dp"
                    android:layout_height="55dp"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/homeasset_f"
                    android:layout_below="@id/rvtopupA">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="WP"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:layout_marginLeft="15dp"
                        android:textColor="#000000"
                        android:layout_alignParentLeft="true"
                        android:background="@drawable/coinrp"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1.000.000"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:layout_toLeftOf="@id/btntmbh_b"
                        android:layout_centerVertical="true"/>

                    <Button
                        android:id="@+id/btntmbh_b"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/homeasset_e"
                        android:text="Tambah"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rvtopupC"
                    android:layout_width="280dp"
                    android:layout_height="55dp"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/homeasset_f"
                    android:layout_below="@id/rvtopupB">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="WP"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:layout_marginLeft="15dp"
                        android:textColor="#000000"
                        android:layout_alignParentLeft="true"
                        android:background="@drawable/coinrp"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1.500.000"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:layout_toLeftOf="@id/btntmbh_c"
                        android:layout_centerVertical="true"/>
                    <Button
                        android:id="@+id/btntmbh_c"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/homeasset_e"
                        android:text="tambah"
                        android:textStyle="bold"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rellaysalTambahan"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_below="@id/rvtopup1"
                android:background="@drawable/homeasset_f">
                <TextView
                    android:layout_width="match_parent"
                    android:text="Akan ditambah sejumlah :"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_height="35dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="50dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="80dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_below="@id/rvtopup1"
                android:background="@drawable/homeasset_e">
                <ImageView
                    android:id="@+id/txt_rppsaldo"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="WP"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:textColor="#000000"
                    android:background="@drawable/coinrp"
                    android:layout_centerHorizontal="true"/>
                <EditText
                    android:id="@+id/edtxt_saldotambah"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_below="@id/txt_rppsaldo"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_horizontal"/>
            </RelativeLayout>

