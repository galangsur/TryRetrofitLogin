<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="25dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/cowcardview"/>
        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buka harga:"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/hargasapi"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="125dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="id as peserta"
            android:textSize="18dp"/>
        <TextView
            android:layout_marginTop="70dp"
            android:layout_marginLeft="110dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tambahan pelelang"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="10dp"/>
        <TextView
            android:id="@+id/commentsapi"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="110dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="lelang yg di ikuti"
            android:textSize="12dp" />
        <TextView
            android:id="@+id/idsapi"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:text="1"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textAlignment="center"
            android:background="@drawable/signasset_d"
            android:gravity="center_horizontal|center_vertical" />
        <ImageView
            android:id="@+id/btn_detailsapi"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/ic_baseline_more_brown_24"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="100dp"/>
    </RelativeLayout>


</androidx.cardview.widget.CardView>