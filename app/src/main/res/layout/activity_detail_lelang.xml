<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/brownlight"
    android:orientation="vertical"
    tools:context=".activity.DetailLelangActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="50dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="90dp"
                android:layout_height="110dp"
                android:background="@drawable/iconsapi"
                android:layout_alignParentRight="true"
                android:layout_marginTop="110dp"/>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="100dp"
                android:layout_marginTop="120dp"
                android:background="@drawable/iconayam"/>
            <TextView
                android:id="@+id/txtdet4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Harga Mulai"
                android:textSize="20dp"
                android:textColor="#000000"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="5dp" />
            <TextView
                android:id="@+id/txt_leldetharga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="40dp"
                android:layout_marginLeft="10dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/txtdet4"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="230dp"
                android:padding="15dp"
                android:background="@drawable/detaillelasset_a">
                <TextView
                    android:id="@+id/txtdet1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tentang Hewan"
                    android:textColor="#000000"
                    android:layout_marginBottom="5dp"/>
                <TextView
                    android:id="@+id/txt_leldetcomment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_below="@id/txtdet1"
                    android:layout_marginBottom="15dp"/>

                <TextView
                    android:id="@+id/txtdet2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hewan"
                    android:textColor="#000000"
                    android:layout_marginBottom="5dp"
                    android:layout_below="@id/txt_leldetcomment"/>
                <TextView
                    android:id="@+id/txt_leldethewan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_below="@id/txtdet2"/>

                <TextView
                    android:id="@+id/txtdet3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pelelang"
                    android:textColor="#000000"
                    android:layout_marginBottom="5dp"
                    android:layout_below="@id/txt_leldethewan"/>
                <TextView
                    android:id="@+id/txt_leldetnama"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_below="@+id/txtdet3"/>

                <Button
                    android:id="@+id/btn_daftarlel"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="Daftar"
                    android:layout_marginTop="50dp"
                    android:layout_below="@id/txt_leldetnama"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tmp_idlelang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/brownlight"/>

                <TextView
                    android:id="@+id/tmp_idhewan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/tmp_idlelang"
                    android:textColor="@color/brownlight"/>

                <TextView
                    android:id="@+id/tmp_idpelelang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/tmp_idhewan"
                    android:textColor="@color/brownlight"/>

                <TextView
                    android:id="@+id/tmp_iduser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/tmp_idpelelang"
                    android:textColor="@color/brownlight"/>
            </RelativeLayout>
        </RelativeLayout>

    </ScrollView>



</LinearLayout>