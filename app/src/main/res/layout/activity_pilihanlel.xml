<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orange1"
    tools:context=".activity.PilihanlelActivity">
    <TextView
        android:id="@+id/pillelrl1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pilihan Lelang Hewan"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/green1"
        android:layout_marginTop="130dp"
        android:layout_centerHorizontal="true"/>

    <RelativeLayout
        android:layout_below="@id/pillelrl1"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="400dp">
        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="400dp"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="200dp"
                    android:layout_height="300dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/btnasset"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/lelhew_image1"
                        android:layout_centerHorizontal="true"
                        android:text="Ayam Aduan"
                        android:textColor="@color/green1"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:layout_marginTop="10dp"/>
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/lelhew_image1"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:src="@drawable/sbngayam"
                        app:civ_border_color="#fff"
                        app:civ_border_width="2dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="24dp"/>
                    <Button
                        android:id="@+id/btnlelayaduan"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/btnasset"
                        android:backgroundTint="@color/green1"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="10dp"
                        android:text="lihat"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:textColor="@color/white"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="200dp"
                    android:layout_height="300dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/btnasset"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/lelhew_image2"
                        android:layout_centerHorizontal="true"
                        android:text="Ikan Cupang"
                        android:textColor="@color/green1"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:layout_marginTop="10dp"/>
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/lelhew_image2"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:src="@drawable/cupangimg"
                        app:civ_border_color="#fff"
                        app:civ_border_width="2dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="24dp"/>
                    <Button
                        android:id="@+id/btnlelcupang"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/btnasset"
                        android:backgroundTint="@color/green1"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="10dp"
                        android:text="lihat"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:textColor="@color/white"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="200dp"
                    android:layout_height="300dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/btnasset"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/lelhew_image3"
                        android:layout_centerHorizontal="true"
                        android:text="Burung"
                        android:textColor="@color/green1"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:layout_marginTop="10dp"/>
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/lelhew_image3"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:src="@drawable/birdimg"
                        app:civ_border_color="#fff"
                        app:civ_border_width="2dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="24dp"/>
                    <Button
                        android:id="@+id/btnlelburung"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/btnasset"
                        android:backgroundTint="@color/green1"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="10dp"
                        android:text="lihat"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:textColor="@color/white"/>
                </RelativeLayout>
            </LinearLayout>
        </HorizontalScrollView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/orange1"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>


</RelativeLayout>