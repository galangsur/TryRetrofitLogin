<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green1"
    tools:context=".activity.WalletCreateActivity">

    <ImageView
        android:id="@+id/image"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:background="@drawable/createwallet"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="30dp"/>


    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/text1"
        android:layout_centerHorizontal="true"
        android:text="Hai "/>

    <TextView
        android:id="@+id/txt_namauser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/text1"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/text2"/>

    <TextView
        android:id="@+id/txt_iduser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:hint="sat ne ye"/>

    <TextView
        android:id="@+id/txt_nominalawal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="190dp"
        android:layout_height="50dp"
        android:textAlignment="center"
        android:layout_marginTop="335dp"
        android:layout_centerHorizontal="true"
        android:text="Buatlah walLet's agar anda dapat ikut serta dalam sebuah lelang"
        android:gravity="center_horizontal"
        android:textColor="@color/greenmoney"/>

    <Button
        android:id="@+id/btn_createwallet"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Buat Wallet"
        android:layout_below="@+id/image"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="70dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/btnasset"
        android:textColor="@color/white"/>

</RelativeLayout>