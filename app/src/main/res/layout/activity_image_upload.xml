<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ImageUploadActivity">
    
    <ImageView
        android:id="@+id/imagedisplay"
        android:layout_width="match_parent"
        android:layout_height="400dp"/>

    <TextView
        android:id="@+id/imageUri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_below="@id/imagedisplay"/>

    <Button
        android:id="@+id/btn_imgupload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upload Image"
        android:layout_marginTop="20dp"
        android:layout_below="@id/imagedisplay"/>

    <Button
        android:id="@+id/btn_pickgallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="From Device"
        android:layout_below="@id/btn_imgupload"
        android:layout_marginTop="20dp"/>

</RelativeLayout>