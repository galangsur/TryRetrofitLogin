<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="25dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/imgaspeserta_itmvw"
            android:layout_width="210dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/pesertaside"/>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="5dp"
            android:text="Ticket Peserta Lelang"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/imgaspeserta_itmvw"
            android:padding="5dp">
            <TextView
                android:id="@+id/idpsrtmanager"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:text="1"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_marginRight="5dp"
                android:textAlignment="center"
                android:background="@drawable/reqlelasset_d"
                android:backgroundTint="@color/orange5"
                android:gravity="center_horizontal|center_vertical"  />

            <Button
                android:id="@+id/btn_todetlelbrjalan"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textColor="@color/white"
                android:text="Detail Ticket"
                android:textStyle="bold"
                android:textSize="12sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/btnasset"/>
            <TextView
                android:id="@+id/id_peserta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="id as peserta"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/gchattoken_key"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_below="@+id/id_aspelelang"/>
            <TextView
                android:id="@+id/txtnolel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="Hewan yang dilelangkan :"
                android:textColor="@color/green1"
                android:textSize="10dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/id_lelbrjalan"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtnolel"
                android:text="lelang yg di ikuti"
                android:textSize="12dp" />
        </RelativeLayout>
<!--        <ImageView-->
<!--            android:layout_width="25dp"-->
<!--            android:layout_height="25dp"-->
<!--            android:layout_marginRight="10dp"-->
<!--            android:layout_marginBottom="5dp"-->
<!--            android:background="@drawable/ic_baseline_more_brown_24"-->
<!--            android:layout_marginLeft="300dp"-->
<!--            android:layout_marginTop="100dp"/>-->
    </RelativeLayout>

</androidx.cardview.widget.CardView>