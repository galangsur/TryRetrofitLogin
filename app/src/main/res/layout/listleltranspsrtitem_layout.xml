<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="25dp">

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:padding="20dp"
            android:layout_below="@id/hargahewanpsrt"
            android:src="@drawable/auction"
            android:background="@drawable/signasset_c"/>

        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Harga Satuan:"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="18dp"/>
        <TextView
            android:id="@+id/hargahewanpsrt"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="135dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Harga Awal"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/lelpsrtuseridkey"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/lelpsrtid"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:text="1"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textAlignment="center"
            android:background="@drawable/signasset_d"
            android:gravity="center_horizontal|center_vertical" />
        <TextView
            android:layout_marginTop="70dp"
            android:layout_marginLeft="110dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status Transaksi"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="10dp"/>
    <TextView
        android:id="@+id/lelpsrtstathasil"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="110dp"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:padding="3dp"
        android:text="status"
        android:textColor="@color/white"
        android:textSize="12dp"
        android:background="@drawable/btnasset"/>
    <TextView
        android:id="@+id/lelpsrtstathasilid"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:textColor="@color/white"/>
    <Button
        android:id="@+id/lelpsrtdetbtn"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/ic_baseline_more_brown_24"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="100dp"/>
</RelativeLayout>

</androidx.cardview.widget.CardView>