<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.DetailTransaksiLelang">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="@drawable/reqlelasset_a"/>
            <RelativeLayout
                android:id="@+id/rellayPemenang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="150dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:padding="15dp"
                android:background="@drawable/signasset_c">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="Pemenang"
                    android:textColor="@color/green1"
                    android:textStyle="bold"
                    android:textSize="20dp"/>
                <TextView
                    android:id="@+id/txt_result1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:text="Username :"
                    android:textColor="@color/green1"
                    android:textStyle="bold"
                    android:textSize="16dp"/>
                <EditText
                    android:id="@+id/rslt_namapemenang"
                    android:layout_width="290dp"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:layout_below="@+id/txt_result1"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rellaydettrans"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rellayPemenang"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:padding="15dp"
                android:background="@drawable/signasset_c">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="Kelengkapan Transaksi"
                    android:textColor="@color/green1"
                    android:textStyle="bold"
                    android:textSize="20dp"/>
                <TextView
                    android:id="@+id/txt_result2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:text="Nominal Transaksi :"
                    android:textColor="@color/green1"
                    android:textStyle="bold"
                    android:textSize="16dp"/>

                <ImageView
                    android:id="@+id/smallwalleticoncpng"
                    android:layout_width="31dp"
                    android:layout_height="31dp"
                    android:background="@drawable/coinrp"
                    android:layout_toLeftOf="@id/rslt_nilaiakhir"
                    android:layout_below="@id/txt_result2"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="10dp"/>

                <EditText
                    android:id="@+id/rslt_nilaiakhir"
                    android:layout_width="264dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:inputType="none"
                    android:layout_below="@+id/txt_result2"/>

                <Button
                    android:id="@+id/btntobukti"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btnasset"
                    android:backgroundTint="@color/white"
                    android:layout_below="@+id/rslt_nilaiakhir"
                    android:layout_marginTop="15dp"
                    android:text="Cek Bukti transaksi"
                    android:textColor="@color/green1"
                    android:textStyle="bold"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:paddingLeft="50dp"
                    android:drawableLeft="@drawable/ic_baseline_description_24"
                    android:drawablePadding="-50dp"/>
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rellayPelelang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:padding="15dp"
                android:background="@drawable/signasset_c"
                android:layout_below="@id/rellaydettrans">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="Pelelang"
                    android:textColor="@color/green1"
                    android:textStyle="bold"
                    android:textSize="20dp"/>
                <TextView
                    android:id="@+id/txt_result8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:text="Username :"
                    android:textColor="@color/green1"
                    android:textStyle="bold"
                    android:textSize="16dp"/>
                <EditText
                    android:id="@+id/rslt_namapelelang"
                    android:layout_width="290dp"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:layout_below="@+id/txt_result8"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/txtdetrasn1_lel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Detail Transaksi"
                android:layout_gravity="center"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="90dp"/>

            <TextView
                android:id="@+id/txtdetrasn2_lel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lelang"
                android:layout_gravity="center"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/txtdetrasn1_lel"/>

            <TextView
                android:id="@+id/reslt_messageId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/green1"/>

            <TextView
                android:id="@+id/reslt_psrtId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/green1"/>

            <TextView
                android:id="@+id/reslt_usernow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/green1"/>

            <TextView
                android:id="@+id/reslt_imgparenttoken"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/green1"/>

            <TextView
                android:id="@+id/reslt_pllgId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/green1"/>

            <TextView
                android:id="@+id/imgkey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/green1"/>

            <TextView
                android:id="@+id/reslt_pelelangName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/green1"/>

            <TextView
                android:id="@+id/txtiddettranslel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/green1"/>

            <TextView
                android:id="@+id/txtidstatold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rellaydettrans"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/txtidstatnew"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rellaydettrans"
                android:textColor="@color/white"
                android:layout_toLeftOf="@id/txtstatnew"/>

            <TextView
                android:id="@+id/txtstatold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rellaydettrans"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/txtstatnew"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rellaydettrans"
                android:textColor="@color/white"
                android:layout_alignParentRight="true"/>

            <Button
                android:id="@+id/leltrans_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="30dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_below="@id/rellayPelelang"
                android:background="@drawable/btnasset"
                android:textColor="@color/white"
                android:text="Submit"/>

            <Button
                android:id="@+id/leltrans_finishtrans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="30dp"
                android:visibility="invisible"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_below="@id/rellayPelelang"
                android:background="@drawable/btnasset"
                android:textColor="@color/white"
                android:text="Transaksi Selesai"/>

            <ImageView
                android:id="@+id/btn_backdettranslel"
                android:layout_width="25dp"
                android:layout_height="35dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="23dp"
                android:src="@drawable/ic_baseline_arrowwhite_24"/>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>