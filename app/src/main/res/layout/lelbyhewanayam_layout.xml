<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:padding="5dp"
    android:layout_marginBottom="10dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/chickencardview"/>
        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Harga Awal:"
            android:textColor="#000000"
            android:textSize="18dp"/>
        <TextView
            android:id="@+id/hargaayam"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="120dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Harga Awal"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="22dp"/>
        <TextView
            android:layout_marginTop="70dp"
            android:layout_marginLeft="110dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tambahan Pelelang"
            android:textColor="#000000"
            android:textSize="10dp"/>
        <TextView
            android:id="@+id/commentayam"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="110dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tambahan Pelelang"
            android:textColor="#000000"
            android:textSize="12dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/idayam"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:text="1"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textAlignment="center"
            android:background="@drawable/lelayamasset_a"
            android:gravity="center_horizontal|center_vertical" />
        <Button
            android:id="@+id/btn_detailayam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="Detail"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:backgroundTint="@color/creamhome"
            android:layout_marginTop="90dp"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>