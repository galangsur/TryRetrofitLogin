<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/green1</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/green3</item>
        <item name="colorControlActivated">@color/green3</item>
    </style>

    <style name="ListviewRatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/green1</item>
        <item name="colorControlActivated">@color/orange5</item>
    </style>
</resources>
